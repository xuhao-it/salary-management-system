<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuhao.payroll.mapper.RewardMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.xuhao.payroll.model.Reward">
        <id column="reward_id" property="rewardId"/>
        <result column="emp_id" property="empId"/>
        <result column="type" property="type"/>
        <result column="amount" property="amount"/>
        <result column="reason" property="reason"/>
        <result column="occur_date" property="occurDate"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 带员工信息的结果映射 -->
    <resultMap id="WithEmployeeResultMap" extends="BaseResultMap" type="com.xuhao.payroll.model.Reward">
        <association property="employee" javaType="com.xuhao.payroll.model.Employee">
            <id column="emp_id" property="empId"/>
            <result column="emp_no" property="empNo"/>
            <result column="emp_name" property="empName"/>
            <result column="dept_id" property="deptId"/>
            <result column="position" property="position"/>
        </association>
    </resultMap>
    
    <!-- 公共字段 -->
    <sql id="Base_Column_List">
        reward_id, emp_id, type, amount, reason, occur_date, create_time, update_time
    </sql>
    
    <!-- 插入 -->
    <insert id="insert" parameterType="com.xuhao.payroll.model.Reward" useGeneratedKeys="true" keyProperty="rewardId">
        INSERT INTO Reward (
            emp_id, type, amount, reason, occur_date, create_time, update_time
        )
        VALUES (
            #{empId}, #{type}, #{amount}, #{reason}, #{occurDate}, GETDATE(), GETDATE()
        )
    </insert>
    
    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Reward WHERE reward_id = #{rewardId}
    </delete>
    
    <!-- 更新 -->
    <update id="update" parameterType="com.xuhao.payroll.model.Reward">
        UPDATE Reward
        <set>
            <if test="empId != null">emp_id = #{empId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="reason != null">reason = #{reason},</if>
            <if test="occurDate != null">occur_date = #{occurDate},</if>
            update_time = GETDATE()
        </set>
        WHERE reward_id = #{rewardId}
    </update>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        WHERE reward_id = #{rewardId}
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 条件查询 -->
    <select id="selectByCondition" parameterType="com.xuhao.payroll.model.Reward" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        <where>
            <if test="empId != null">
                AND emp_id = #{empId}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="occurDate != null">
                AND occur_date = #{occurDate}
            </if>
        </where>
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 查询总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM Reward
    </select>
    
    <!-- 根据员工ID查询 -->
    <select id="selectByEmpId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        WHERE emp_id = #{empId}
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 根据类型查询 -->
    <select id="selectByType" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        WHERE type = #{type}
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 根据日期范围查询 -->
    <select id="selectByDateRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        WHERE occur_date BETWEEN #{startDate} AND #{endDate}
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 查询员工在指定月份的奖惩记录 -->
    <select id="selectByEmpIdAndMonth" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Reward
        WHERE emp_id = #{empId}
          AND YEAR(occur_date) = #{year}
          AND MONTH(occur_date) = #{month}
        ORDER BY occur_date DESC, create_time DESC
    </select>
    
    <!-- 查询带员工信息的奖惩记录列表 -->
    <select id="selectWithEmployee" resultMap="WithEmployeeResultMap">
        SELECT r.*, e.emp_no, e.emp_name, e.dept_id, e.position
        FROM Reward r
        LEFT JOIN Employee e ON r.emp_id = e.emp_id
        ORDER BY r.occur_date DESC, r.create_time DESC
    </select>
</mapper> 