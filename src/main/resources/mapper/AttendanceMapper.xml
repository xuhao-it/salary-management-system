<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuhao.payroll.mapper.AttendanceMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.xuhao.payroll.model.Attendance">
        <id column="attendance_id" property="attendanceId"/>
        <result column="emp_id" property="empId"/>
        <result column="attendance_date" property="attendanceDate"/>
        <result column="check_in" property="checkIn"/>
        <result column="check_out" property="checkOut"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <!-- 带员工信息的结果映射 -->
    <resultMap id="WithEmployeeResultMap" extends="BaseResultMap" type="com.xuhao.payroll.model.Attendance">
        <association property="employee" javaType="com.xuhao.payroll.model.Employee">
            <id column="emp_id" property="empId"/>
            <result column="emp_no" property="empNo"/>
            <result column="emp_name" property="empName"/>
            <result column="dept_id" property="deptId"/>
            <result column="position" property="position"/>
        </association>
    </resultMap>
    
    <!-- 公共字段 -->
    <sql id="Base_Column_List">
        attendance_id, emp_id, attendance_date, check_in, check_out,
        status, remark, create_time
    </sql>
    
    <!-- 插入 -->
    <insert id="insert" parameterType="com.xuhao.payroll.model.Attendance" useGeneratedKeys="true" keyProperty="attendanceId">
        INSERT INTO Attendance (
            emp_id, attendance_date, check_in, check_out,
            status, remark, create_time
        )
        VALUES (
            #{empId}, #{attendanceDate}, #{checkIn}, #{checkOut},
            #{status}, #{remark}, GETDATE()
        )
    </insert>
    
    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Attendance WHERE attendance_id = #{attendanceId}
    </delete>
    
    <!-- 更新 -->
    <update id="update" parameterType="com.xuhao.payroll.model.Attendance">
        UPDATE Attendance
        <set>
            <if test="empId != null">emp_id = #{empId},</if>
            <if test="attendanceDate != null">attendance_date = #{attendanceDate},</if>
            <if test="checkIn != null">check_in = #{checkIn},</if>
            <if test="checkOut != null">check_out = #{checkOut},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE attendance_id = #{attendanceId}
    </update>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        WHERE attendance_id = #{attendanceId}
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        ORDER BY attendance_date DESC, emp_id
    </select>
    
    <!-- 条件查询 -->
    <select id="selectByCondition" parameterType="com.xuhao.payroll.model.Attendance" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        <where>
            <if test="empId != null">
                AND emp_id = #{empId}
            </if>
            <if test="attendanceDate != null">
                AND attendance_date = #{attendanceDate}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY attendance_date DESC, emp_id
    </select>
    
    <!-- 查询总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM Attendance
    </select>
    
    <!-- 根据员工ID查询 -->
    <select id="selectByEmpId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        WHERE emp_id = #{empId}
        ORDER BY attendance_date DESC
    </select>
    
    <!-- 根据日期查询 -->
    <select id="selectByDate" parameterType="java.time.LocalDate" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        WHERE attendance_date = #{date}
        ORDER BY emp_id
    </select>
    
    <!-- 根据员工ID和日期查询 -->
    <select id="selectByEmpIdAndDate" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        WHERE emp_id = #{empId} AND attendance_date = #{date}
    </select>
    
    <!-- 根据日期范围查询 -->
    <select id="selectByDateRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Attendance
        WHERE attendance_date BETWEEN #{startDate} AND #{endDate}
        ORDER BY attendance_date DESC, emp_id
    </select>
    
    <!-- 查询带员工信息的考勤记录列表 -->
    <select id="selectWithEmployee" resultMap="WithEmployeeResultMap">
        SELECT a.*, e.emp_no, e.emp_name, e.dept_id, e.position
        FROM Attendance a
        LEFT JOIN Employee e ON a.emp_id = e.emp_id
        ORDER BY a.attendance_date DESC, a.emp_id
    </select>
</mapper> 