<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuhao.payroll.mapper.EmployeeMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.xuhao.payroll.model.Employee">
        <id column="emp_id" property="empId"/>
        <result column="emp_no" property="empNo"/>
        <result column="emp_name" property="empName"/>
        <result column="gender" property="gender"/>
        <result column="birth_date" property="birthDate"/>
        <result column="id_card" property="idCard"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="address" property="address"/>
        <result column="dept_id" property="deptId"/>
        <result column="position" property="position"/>
        <result column="entry_date" property="entryDate"/>
        <result column="leave_date" property="leaveDate"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 带部门信息的结果映射 -->
    <resultMap id="WithDeptResultMap" extends="BaseResultMap" type="com.xuhao.payroll.model.Employee">
        <association property="department" javaType="com.xuhao.payroll.model.Department">
            <id column="dept_id" property="deptId"/>
            <result column="dept_name" property="deptName"/>
            <result column="dept_desc" property="deptDesc"/>
        </association>
    </resultMap>
    
    <!-- 公共字段 -->
    <sql id="Base_Column_List">
        emp_id, emp_no, emp_name, gender, birth_date, id_card, phone, email, address,
        dept_id, position, entry_date, leave_date, status, create_time, update_time
    </sql>
    
    <!-- 插入 -->
    <insert id="insert" parameterType="com.xuhao.payroll.model.Employee" useGeneratedKeys="true" keyProperty="empId">
        INSERT INTO Employee (
            emp_no, emp_name, gender, birth_date, id_card, phone, email, address,
            dept_id, position, entry_date, leave_date, status, create_time, update_time
        )
        VALUES (
            #{empNo}, #{empName}, #{gender}, #{birthDate}, #{idCard}, #{phone}, #{email}, #{address},
            #{deptId}, #{position}, #{entryDate}, #{leaveDate}, #{status}, GETDATE(), GETDATE()
        )
    </insert>
    
    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Employee WHERE emp_id = #{empId}
    </delete>
    
    <!-- 更新 -->
    <update id="update" parameterType="com.xuhao.payroll.model.Employee">
        UPDATE Employee
        <set>
            <if test="empNo != null">emp_no = #{empNo},</if>
            <if test="empName != null">emp_name = #{empName},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="birthDate != null">birth_date = #{birthDate},</if>
            <if test="idCard != null">id_card = #{idCard},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="address != null">address = #{address},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="position != null">position = #{position},</if>
            <if test="entryDate != null">entry_date = #{entryDate},</if>
            <if test="leaveDate != null">leave_date = #{leaveDate},</if>
            <if test="status != null">status = #{status},</if>
            update_time = GETDATE()
        </set>
        WHERE emp_id = #{empId}
    </update>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        WHERE emp_id = #{empId}
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        ORDER BY emp_id
    </select>
    
    <!-- 条件查询 -->
    <select id="selectByCondition" parameterType="com.xuhao.payroll.model.Employee" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        <where>
            <if test="empNo != null and empNo != ''">
                AND emp_no LIKE '%' + #{empNo} + '%'
            </if>
            <if test="empName != null and empName != ''">
                AND emp_name LIKE '%' + #{empName} + '%'
            </if>
            <if test="deptId != null">
                AND dept_id = #{deptId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY emp_id
    </select>
    
    <!-- 查询总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM Employee
    </select>
    
    <!-- 根据工号查询 -->
    <select id="selectByEmpNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        WHERE emp_no = #{empNo}
    </select>
    
    <!-- 根据部门ID查询 -->
    <select id="selectByDeptId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        WHERE dept_id = #{deptId}
        ORDER BY emp_id
    </select>
    
    <!-- 根据状态查询 -->
    <select id="selectByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Employee
        WHERE status = #{status}
        ORDER BY emp_id
    </select>
    
    <!-- 查询带部门信息的员工列表 -->
    <select id="selectWithDept" resultMap="WithDeptResultMap">
        SELECT e.*, d.dept_name, d.dept_desc
        FROM Employee e
        LEFT JOIN Department d ON e.dept_id = d.dept_id
        ORDER BY e.emp_id
    </select>
</mapper> 