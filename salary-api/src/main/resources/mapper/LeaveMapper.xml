<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuhao.payroll.mapper.LeaveMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.xuhao.payroll.model.Leave">
        <id column="leave_id" property="leaveId"/>
        <result column="emp_id" property="empId"/>
        <result column="leave_type" property="leaveType"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="duration" property="duration"/>
        <result column="reason" property="reason"/>
        <result column="status" property="status"/>
        <result column="approver_id" property="approverId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 带员工和审批人信息的结果映射 -->
    <resultMap id="WithEmployeeAndApproverResultMap" extends="BaseResultMap" type="com.xuhao.payroll.model.Leave">
        <association property="employee" javaType="com.xuhao.payroll.model.Employee">
            <id column="emp_id" property="empId"/>
            <result column="emp_no" property="empNo"/>
            <result column="emp_name" property="empName"/>
            <result column="dept_id" property="deptId"/>
            <result column="position" property="position"/>
        </association>
        <association property="approver" javaType="com.xuhao.payroll.model.Employee">
            <id column="approver_id" property="empId"/>
            <result column="approver_no" property="empNo"/>
            <result column="approver_name" property="empName"/>
            <result column="approver_position" property="position"/>
        </association>
    </resultMap>
    
    <!-- 公共字段 -->
    <sql id="Base_Column_List">
        leave_id, emp_id, leave_type, start_time, end_time, duration,
        reason, status, approver_id, create_time, update_time
    </sql>
    
    <!-- 插入 -->
    <insert id="insert" parameterType="com.xuhao.payroll.model.Leave" useGeneratedKeys="true" keyProperty="leaveId">
        INSERT INTO Leave (
            emp_id, leave_type, start_time, end_time, duration,
            reason, status, approver_id, create_time, update_time
        )
        VALUES (
            #{empId}, #{leaveType}, #{startTime}, #{endTime}, #{duration},
            #{reason}, #{status}, #{approverId}, GETDATE(), GETDATE()
        )
    </insert>
    
    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Leave WHERE leave_id = #{leaveId}
    </delete>
    
    <!-- 更新 -->
    <update id="update" parameterType="com.xuhao.payroll.model.Leave">
        UPDATE Leave
        <set>
            <if test="empId != null">emp_id = #{empId},</if>
            <if test="leaveType != null">leave_type = #{leaveType},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="reason != null">reason = #{reason},</if>
            <if test="status != null">status = #{status},</if>
            <if test="approverId != null">approver_id = #{approverId},</if>
            update_time = GETDATE()
        </set>
        WHERE leave_id = #{leaveId}
    </update>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE leave_id = #{leaveId}
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        ORDER BY create_time DESC
    </select>
    
    <!-- 条件查询 -->
    <select id="selectByCondition" parameterType="com.xuhao.payroll.model.Leave" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        <where>
            <if test="empId != null">
                AND emp_id = #{empId}
            </if>
            <if test="leaveType != null">
                AND leave_type = #{leaveType}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="approverId != null">
                AND approver_id = #{approverId}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <!-- 查询总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM Leave
    </select>
    
    <!-- 根据员工ID查询 -->
    <select id="selectByEmpId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE emp_id = #{empId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据审批人ID查询 -->
    <select id="selectByApproverId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE approver_id = #{approverId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据状态查询 -->
    <select id="selectByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE status = #{status}
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据时间范围查询 -->
    <select id="selectByTimeRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE (start_time BETWEEN #{startTime} AND #{endTime})
           OR (end_time BETWEEN #{startTime} AND #{endTime})
        ORDER BY create_time DESC
    </select>
    
    <!-- 查询待审批的请假记录 -->
    <select id="selectPendingByApproverId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Leave
        WHERE approver_id = #{approverId} AND status = 1
        ORDER BY create_time DESC
    </select>
    
    <!-- 查询带员工和审批人信息的请假记录列表 -->
    <select id="selectWithEmployeeAndApprover" resultMap="WithEmployeeAndApproverResultMap">
        SELECT l.*,
               e.emp_no, e.emp_name, e.dept_id, e.position,
               a.emp_no as approver_no, a.emp_name as approver_name, a.position as approver_position
        FROM Leave l
        LEFT JOIN Employee e ON l.emp_id = e.emp_id
        LEFT JOIN Employee a ON l.approver_id = a.emp_id
        ORDER BY l.create_time DESC
    </select>
</mapper> 